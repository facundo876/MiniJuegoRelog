@using Modelos;
@model IEnumerable<Tiempos>
<table class="table" id="TiemposTable">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Tiempo</th>
            <th>Participante</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var tiempos in Model)
            {
                <tr>
                    <td>@tiempos.Id</td>
                    <td>@tiempos.Tiempo</td>
                    <td>@tiempos.Participante.Name</td>
                    <td>
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@tiempos.Id','Edit Customer')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-page="Index" asp-route-id="@tiempos.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#TiemposTable").DataTable();
    });
</script>