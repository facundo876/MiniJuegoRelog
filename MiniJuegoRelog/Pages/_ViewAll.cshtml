@using Modelos;
@model IEnumerable<Participante>
<table class="table" id="participanteTable">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Fecha Creacion</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var participante in Model)
            {
                <tr>
                    <td>@participante.Name</td>
                    <td>@participante.Email</td>
                    <td>@participante.FechaCreacion</td>
                    <td>
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@participante.Id','Edit Customer')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-page="Index" asp-route-id="@participante.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
$(document).ready(function () {
    $("#participanteTable").DataTable();
    });</script>
